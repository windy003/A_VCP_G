<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/floating_bg"
    android:padding="8dp"
    android:elevation="16dp">

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnRewind"
            style="@style/FloatingButtonStyle"
            android:src="@drawable/ic_replay_5"
            android:contentDescription="Rewind 5 seconds" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            style="@style/FloatingButtonStyle"
            android:src="@drawable/ic_pause"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/btnClose"
            style="@style/FloatingButtonStyle"
            android:src="@drawable/ic_close"
            android:contentDescription="Close floating window" />

    </LinearLayout>

    <!-- 播放进度条和时间信息 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="4dp">
        
        <!-- 时间显示 -->
        <TextView
            android:id="@+id/tvTimeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00 / 00:00"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:fontFamily="monospace" />
        
        <!-- 播放进度条 -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressTint="#FF4081"
            android:progressBackgroundTint="#33FFFFFF"
            android:thumbTint="#FF4081"
            android:max="100"
            android:progress="0" />
            
    </LinearLayout>

    <!-- 笔记文本输入框 -->
    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        android:hint="记录笔记..."
        android:textColorHint="#999999"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:maxLines="20"
        android:minLines="8"
        android:textCursorDrawable="@null" />

</LinearLayout>