<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude cache files from backup -->
        <exclude domain="cache" />
        <exclude domain="external-cache" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Transfer app data during device-to-device migration -->
        <include domain="sharedpref" path="." />
        <exclude domain="cache" />
        <exclude domain="external-cache" />
    </device-transfer>
</data-extraction-rules>