<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true">

    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />



    <!-- Subtitle overlay -->
    <TextView
        android:id="@+id/subtitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/playerView"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/subtitle_bg"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/subtitle_text"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Control buttons overlay -->
    <LinearLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/tvSubtitleOffset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="字幕: 0.0s"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@color/subtitle_bg"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center" />

        <Button
            android:id="@+id/btnSubtitleDelayMinus"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="-0.3s"
            android:textSize="12sp"
            android:minWidth="60dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnSubtitleDelayPlus"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="+0.3s"
            android:textSize="12sp"
            android:minWidth="60dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnClearScreenInline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="清屏"
            android:textSize="12sp"
            android:minWidth="80dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnToggleControls"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="切换控件"
            android:textSize="12sp"
            android:minWidth="80dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnSubtitlePanel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/show_subtitles"
            android:textSize="12sp"
            android:minWidth="120dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>


    <!-- 独立的清屏按钮 - 放在最显眼的位置 -->
    <Button
        android:id="@+id/btnClearScreenFloat"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="清屏"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#AA000000"
        android:minWidth="80dp"
        android:elevation="20dp"
        android:padding="8dp" />

    <!-- Subtitle panel (YouTube-like transcript) -->
    <LinearLayout
        android:id="@+id/subtitlePanel"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/subtitle_panel_bg"
        android:orientation="vertical"
        android:visibility="gone"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/primary">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/subtitle_panel_title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnCloseSubtitlePanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="@color/white"
                android:padding="8dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_help_text"
            android:textSize="12sp"
            android:textColor="@color/on_background"
            android:gravity="center"
            android:padding="8dp"
            android:alpha="0.7" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subtitleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Clear screen mode overlay - 点击屏幕任意位置退出清屏 -->
    <View
        android:id="@+id/clearScreenOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone" />
    
    <!-- 清屏模式提示文字 -->
    <TextView
        android:id="@+id/clearScreenHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="点击屏幕退出清屏模式"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@color/subtitle_bg"
        android:padding="12dp"
        android:elevation="10dp"
        android:alpha="0.8"
        android:visibility="gone" />

    <!-- Loading indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <!-- 绝对顶层的清屏按钮 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false">

        <Button
            android:id="@+id/btnClearScreenTop"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:text="清屏"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="#CC000000"
            android:minWidth="80dp"
            android:elevation="50dp"
            android:padding="8dp"
            android:translationZ="50dp" />

    </FrameLayout>

</RelativeLayout>